<phpunit colors="true"
         bootstrap="{{bootstrap}}"
         backupGlobals="false">
	<testsuites>
		<testsuite name="Test Suite">
			<directory suffix=".test.php">{{directory}}</directory>
		</testsuite>
	</testsuites>

	<logging>
		<!-- this is JUnit test report of Jenkins -->
		<log type="junit" target="target/logs/junit.xml" logIncompleteSkipped="true"/>
	</logging>
</phpunit>